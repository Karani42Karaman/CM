@model List<FirmaModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Table Start -->

<div class="container-fluid pt-4 px-4" style="height: 100vh;">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center align-items-center" style="flex-direction: column; height: 100%;">

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">

                    <div class="col-12" style="">
                        <div class="bg-secondary rounded h-100 p-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">Firma</h6>
                                <form asp-area="Admin" asp-controller="Dashboard" asp-action="CreateFirma" method="get">
                                    <button type="submit" class="btn btn-success" style="margin-right: 25px;">Create</button>
                                </form>

                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Firma Adı</th>
                                                <th scope="col">SiteAdresi</th>
                                                <th scope="col">Slogan</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">PhoneNumber</th>
                                                <th scope="col">FacebookLink</th>
                                                <th scope="col">InstagramLink</th>
                                                <th scope="col">YoutubeUrl</th>
                                                <th scope="col">WhatsappNumber</th>
                                                <th scope="col">Kayıt Tarihi</th>
                                                <th scope="col">Güncelleme Tarihi</th>


                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            <tbody>
                                                <tr>
                                                    <th scope="row">1</th>
                                                    
                                                    <td>@item.FirmaAdi</td>
                                                    <td>@item.SiteAdresi</td>
                                                    <td>@item.Slogan</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.PhoneNumber</td>
                                                    <td>@item.FacebookLink</td>
                                                    <td>@item.InstagramLink</td>
                                                    <td>@item.YoutubeUrl</td>
                                                    <td>@item.WhatsappNumber</td>
                                                    <td>@item.CreateDate</td>
                                                    <td>@item.UpdateDate</td>
                                                    <td>
                                                        <a class="btn btn-sm btn-primary" href="/Dashboard/UpdateFirma?Id=@item.FirmaId">Update</a>
                                                        <a class="btn btn-sm btn-danger" href="/Dashboard/DeleteFirma?Id=@item.FirmaId">Delete</a>

                                                    </td>
                                                </tr>
                                            </tbody>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5">Veri bulunamadı.</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
