@model CM.Core.Dto.DilModelDto

@{
    ViewData["Title"] = "CreateBelgeler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Table Start -->

<div class="container-fluid pt-4 px-4" style="height: 100vh;">
    <div class="row g-4">
        <div class="col-12 d-flex justify-content-center align-items-center" style="flex-direction: column; height: 100%;">

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">

                    <div class="col-12">
                        <div style="text-align:center" class="bg-secondary rounded h-100 p-4">
                            <h1>CreateBelgeler</h1>

                            <h4>Belgeler</h4>
                            <hr />
                            <div class="row justify-content-center">
                                <div class="col-md-4">
                                    <form asp-area="Admin" asp-controller="Dashboard" asp-action="CreateDil" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <label asp-for="Key" class="control-label"></label>
                                            <input asp-for="Key" class="form-control" required="" />
