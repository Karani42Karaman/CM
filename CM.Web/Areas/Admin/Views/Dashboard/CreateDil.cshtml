                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Data" class="control-label"></label>
                                            <input asp-for="Data" class="form-control" required="" />
                                            <span asp-validation-for="Data" class="text-danger"></span>
                                        </div>


                                        <div class="form-group">
                                            <label asp-for="Veri" class="control-label"></label>
                                            <input asp-for="Veri" class="form-control" required="" />
                                            <span asp-validation-for="Veri" class="text-danger"></span>
                                        </div>

 


                                        
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div>
                                <a asp-area="admin" asp-controller="Dashboard" asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
 