@model CM.Core.Model.GaleriModel

@{
    ViewData["Title"] = "UpdateBelgeler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid pt-4 px-4" style="height: 100vh;">
    <div class="row" style="text-align:center">

        <div class="col-12">
            <div class="row" style="text-align:center">


                <div style="text-align:center" class="bg-secondary rounded h-100 p-4">
                    <h1>Update Galeri</h1>

                    <h4>Galeri</h4>
                    <hr />
                    <div class="row">
                        <form asp-area="Admin" asp-controller="Dashboard" asp-action="UpdateGaleri" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-24 col-sm-24">
                                <div class="row">
                                    <div class="col-lg-8 col-sm-8 col-12">
                                        <div class="form-group">
                                            <label asp-for="Başlık" class="control-label"></label>
                                            <input asp-for="Başlık" class="form-control" value="@Model.Başlık" required="" />
                                            <span asp-validation-for="Başlık" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-8 col-sm-8 col-12">
                                        <div class="form-group">
                                            <label asp-for="BaşlıkEn" class="control-label"></label>
                                            <input asp-for="BaşlıkEn" class="form-control" value="@Model.BaşlıkEn" required="" />
                                            <span asp-validation-for="BaşlıkEn" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-8 col-sm-8 col-12">
                                        <div class="form-group">
                                            <label asp-for="Başlık" class="control-label">Sertifika Seç</label>
                                            <img src="@Model.ImagePath" alt="@Model.ImageName" style="max-width: 100px; max-height: 100px; margin-top=500px;" />

                                            <div class="d-flex align-items-center">
                                                <input type="file" name="imageFile" accept=".jpg, .jpeg, .png" id="imageFileInput" class="form-control" />
                                                <span asp-validation-for="Başlık" class="text-danger ml-2"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <input type="hidden" name="CreateDate" value="@Model.CreateDate" class="btn btn-primary" />
                                <input type="hidden" name="GaleriId" value="@Model.GaleriId" class="btn btn-primary" />



                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>

                    <div>
                        <a asp-area="admin" asp-controller="Dashboard" asp-action="GaleriIndex">Back to List</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
