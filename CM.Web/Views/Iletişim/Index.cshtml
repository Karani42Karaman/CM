@inject IViewLocalizer Localizer
@model CM.Core.Dto.IletişimDto

<!--Page Title-->
<section class="page-title centred">
    <div class="overlay-bg"></div>
    <div class="pattern-layer"></div>
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>@Localizer["İletişim"]</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="./">@Localizer["Anasayfa"]</a></li>
                <li>@Localizer["İletişim"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- contact-section -->
@if (Model.isMail)
{
    if (Model.Iletişim.Durum)
    {
        <div class="alert alert-success" role="alert">
            Mesaj iletildi
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Mesaj Göndeilemedi
        </div>
    }

}
<section class="contact-section">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-6 col-md-6 col-sm-12 info-column">
                <div class="content_block_6">
                    <div class="info-inner">
                        <h2>@Localizer["İletişim Formu"]</h2>
                        <ul class="info-list clearfix">
                            <li>
                                <i class="flaticon-telephone"></i>
                                <p><a href="tel:+9003323555553">@Model.FirmaDto.PhoneNumber</a>
                            </li>
                            <li>
                                <i class="flaticon-email"></i>
                                <p><a href="mailto:modellemecephe@gmailcom">@Model.FirmaDto.Email</a></p>
                            </li>
                            <li>
                                <i class="flaticon-pin"></i>
                                @Model.FirmaDto.Adres
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 form-column">
                <div class="form-inner">
                    <form method="post" asp-action="SendMail" asp-controller="Iletişim" id="contact-form" class="default-form">
                        <div class="row clearfix">
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                <input type="text" name="Name" placeholder="@Localizer["İsim Soyisim"]" required="">
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                                <input type="text" name="PhoneNumber" required="" placeholder="@Localizer["Telefon Numaranız"]">
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                <input type="email" name="Email" placeholder="@Localizer["E-posta Adresiniz"]" required="">
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                <textarea name="Message" placeholder="@Localizer["Mesajınız"]"></textarea>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 form-group message-btn">
                                <button class="theme-btn-one float-right" type="submit"
                                        name="submit-form">
                                    @Localizer["Gönder"]
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

   


</section>
<!-- contact-section end -->
<!-- google-map-two -->
<section class="google-map-two">
    <div class="map-inner">
        <div class="map-container">
            maps
        </div>
    </div>
</section>
