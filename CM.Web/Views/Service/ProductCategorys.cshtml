@inject IViewLocalizer Localizer
@model List<CM.Core.Model.UrünKategoriModel>
@{

    var currentCulture = Thread.CurrentThread.CurrentUICulture.Name;
}
<!--Page Title-->
<section class="page-title centred">
    <div class="overlay-bg"></div>
    <div class="pattern-layer"></div>
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>@Localizer["Kategoriler"]</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="./">@Localizer["Anasayfa"]</a></li>
                <li>@Localizer["Kategoriler"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- service-section -->
<section class="service-page-section centred">
    <div class="auto-container">
        <div class="row clearfix">


            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 service-block">
                    <div class="service-block-one wow fadeInUp animated animated" data-wow-delay="00ms"
                         data-wow-duration="500ms">
                        <div class="inner-box">
                            <figure class="image-box"><img src="@item.ImagePath" alt="@item.ImageName"/></figure>
                            <div class="text">
                                <h2>
                                    @{
                                        if (currentCulture.Equals("tr-TR"))
                                        {
                                            @item.Baslık
                                        }
                                        else
                                        {
                                            @item.BaslıkEn
                                        }
                                    }
                                </h2>
                            </div>
                            <div class="overlay-content">
                                <div class="inner">
                                    <h3><a href="service-details.html">
                                            @{
                                                if (currentCulture.Equals("tr-TR"))
                                                {
                                                    @item.Baslık
                                                }
                                                else
                                                {
                                                    @item.BaslıkEn
                                                }
                                            }
                                        </a></h3>
                                    <p></p>
                                    <div class="link"><a asp-action="ProductDetail" asp-route-id="@item.UrünKategorId">@Localizer["İncele"]</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
    </div>
</section>
<!-- service-section end -->
